<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_margin"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/viewOne"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:background="@color/color_white" />

    <View
        android:id="@+id/viewTwo"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@+id/viewOne"
        android:background="@color/color_grey_light" />
    <RelativeLayout
        android:id="@+id/viewThree"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/viewTwo"
        android:background="@color/color_white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/viewTwo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp" >
        <ImageView
            android:id="@+id/imageView_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/i17"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <CheckBox
            android:id="@+id/imageView_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/color_white"
            android:layout_alignTop="@+id/imageView_group"
            android:layout_alignEnd="@+id/imageView_group" />
    </RelativeLayout>

    <Button
        android:layout_width="118dp"
        android:layout_height="30dp"
        android:id="@+id/groupLinearLayout"
        android:layout_alignBottom="@+id/viewThree"
        android:layout_centerHorizontal="true"
        android:text="Select"
        android:textColor="@color/color_white"
        android:background="@drawable/roundedconerbutton"
        android:layout_marginBottom="10dp" />

</RelativeLayout>