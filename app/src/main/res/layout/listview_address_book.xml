<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_margin"
    android:background="@drawable/round_effect">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_horizontal_margin">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="Karthik Tungenwar"
            android:textStyle="bold|normal"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView_FullName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flat no. 3, Satya Bhavana Society,"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView_Address1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Near RathChakra Chowk,"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView_Address2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indira Nagar,"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView_Address3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nashik, Maharasthra"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView_City_State" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone no.8007233246"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView_Mobile" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="@string/edit"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:background="@drawable/roundedconerbutton"
            android:id="@+id/button_Edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="@string/delete"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:id="@+id/button_Delete"
            android:background="@drawable/roundedconerbutton"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>
</LinearLayout>